//- begin document
doctype html

html(lang='en')
  include includes/header.jade
  body.nav-md
    .container.body
      .main_container
        block main_content
          .col-md-3.left_col.menu_fixed
            .left_col.scroll-view
              .navbar.nav_title(style={border: 0})
                a.site_title(href='/')
                  i.fa.fa-coffee
                  span    Smart Kitchen
              .clearfix
              //- menu profile quick info
              .profile.clearfix
                .profile_pic
                  img.img-circle.profile_img(src='/img/remy.jpg', alt='...')
