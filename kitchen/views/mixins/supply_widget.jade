mixin supply_widget(supply)
  .widget_summary
    .w_left(style={width: "20%"})
      span= supply.name
    .w_center(style={width: "55%"})
      .progress
        - var percentage = (supply.percentage*100).toString() + "%";
        if supply.percentage > 0.15
          .progress-bar.bg-green(role="progressbar",aria-valuenow="60", aria-valuemin="0", aria-valuemax="100" style={width: percentage})
            span.sr-only= supply.percentage + " Complete"
        else 
          .progress-bar.bg-red(role="progressbar",aria-valuenow="60", aria-valuemin="0", aria-valuemax="100" style={width: percentage})
            span.sr-only= supply.percentage + " Complete"
    .w_right(style={width: "25%"})
      span= supply.value
    .clearfix